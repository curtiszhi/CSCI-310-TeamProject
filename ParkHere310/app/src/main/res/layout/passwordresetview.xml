<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/introEditText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_light_background"
        android:textSize="16dp" />

    <EditText
        android:title="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recemailEditText"
        android:hint=" Account Email"
        android:inputType="textEmailAddress"
        android:focusable="true"
        android:textSize="20dp"
        android:textColorHighlight="#fb00ff"
        android:textColorHint="#2945a3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/editbox_dropdown_light_frame" />
    <TextView android:text="ParkHere310"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_above="@id/recemailEditText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_light_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom= "90dp"/>


    <Button
        android:title="Send Recovery Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Recovery Email"
        android:layout_marginTop="10dp"
        android:id="@+id/recoveryButton"
        android:layout_below="@+id/recemailEditText"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInProgress"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light"
        android:layout_below="@+id/recoveryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
